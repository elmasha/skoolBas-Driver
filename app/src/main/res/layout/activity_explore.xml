<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/secondary"
    android:layout_height="match_parent"
    tools:context=".MainActivity.ExploreActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/BackExplore_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:drawableRight="@drawable/ic_back_34"
                android:drawableTint="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:text="Explore more.."
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:drawableTint="@color/white" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_maps_white"
            android:orientation="vertical">






            <RelativeLayout
                android:id="@+id/LL_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/SearchFarmLayout_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="9dp"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_blue_search"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:padding="2dp"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/Search_text_e"
                                android:layout_width="260dp"
                                android:background="@drawable/bg_grey_search"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:drawableLeft="@drawable/ic_search_24"
                                android:drawableTint="@color/grey"
                                android:hint="  Search for farm"
                                android:padding="5dp" />


                            <EditText
                                android:id="@+id/Search_county_e"
                                android:layout_width="260dp"
                                android:background="@drawable/bg_grey_search"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:drawableLeft="@drawable/ic_search_24"
                                android:drawableTint="@color/grey"
                                android:hint="Search county"
                                android:padding="5dp" />

                            <RelativeLayout
                                android:visibility="gone"
                                android:background="@drawable/bg_grey_search"
                                android:id="@+id/GooglePlaceSearch_e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <fragment android:id="@+id/autocomplete_fragment_e"
                                    android:layout_width="260dp"
                                    android:layout_margin="2dp"
                                    android:layout_height="30dp"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    />
                            </RelativeLayout>




                        </RelativeLayout>




                        <ImageButton
                            android:id="@+id/tuneSearch_e"
                            android:background="@drawable/ic_tunes_24"
                            android:layout_width="30dp"
                            android:layout_margin="4dp"
                            android:padding="4dp"
                            android:layout_height="30dp"/>

                        <ImageButton
                            android:background="@drawable/search_county"
                            android:layout_width="30dp"
                            android:padding="3dp"
                            android:visibility="gone"
                            android:layout_margin="4dp"
                            android:layout_height="30dp"/>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/Clear_filter_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="17dp"
                        android:padding="5dp"
                        android:drawableTop="@drawable/close_20"
                        android:text="Clear"
                        android:textColor="@color/ColorRed"
                        android:textStyle="bold"
                        android:visibility="gone" />


                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_tune_24"
                        android:drawableTint="@color/primary"
                        app:fab_colorNormal="@color/white"
                        app:fab_colorPressed="@color/secondary"
                        app:fab_icon="@drawable/ic_tune_24"
                        app:fab_size="mini" />

                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/OpenSearchLayout_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/primary"
                        android:visibility="gone"
                        app:fab_colorNormal="@color/main"
                        app:fab_colorPressed="@color/secondary"
                        app:fab_icon="@drawable/ic_search_24"
                        app:fab_size="mini" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/L877_e"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/SearchFarmLayout_e"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:padding="3dp"
                            android:layout_marginStart="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/main"
                            android:text="Select search"
                            android:textColor="@color/main"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/SpinnerFilter_e"
                            android:layout_width="200dp"
                            android:padding="6dp"
                            android:background="@drawable/bg_lightgrey"
                            android:layout_height="wrap_content"
                            android:entries="@array/filters"
                            android:visibility="gone" />


                    </LinearLayout>





                </RelativeLayout>





            </RelativeLayout>










          <LinearLayout
              android:layout_below="@+id/LL_search"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
              <androidx.cardview.widget.CardView
                  android:layout_gravity="center"
                  android:layout_margin="8dp"
                  app:cardCornerRadius="12dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:orientation="vertical"
                      android:padding="3dp"
                      android:background="@color/primary"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <RelativeLayout
                          android:orientation="horizontal"
                          android:padding="6dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">


                          <LinearLayout
                              android:orientation="vertical"
                              android:padding="4dp"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                              <LinearLayout
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">

                                  <TextView
                                      android:id="@+id/weather_location"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text=""
                                      android:textStyle="bold"
                                      android:textSize="16sp"
                                      android:drawableTint="@color/white"
                                      android:textColor="@color/white"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      android:drawableLeft="@drawable/ic_location_pin"/>


                              </LinearLayout>



                              <LinearLayout
                                  android:layout_width="wrap_content"
                                  android:padding="3dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">





                                  <LinearLayout
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="vertical">

                                      <LinearLayout
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:orientation="horizontal">
                                          <TextView
                                              android:id="@+id/weather_temperature"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:text="0 C"
                                              android:textStyle="bold"
                                              android:textColor="@color/white"
                                              android:textSize="26sp"
                                              android:layout_gravity="center"
                                              android:textAlignment="center"
                                              />


                                          <LinearLayout
                                              android:orientation="vertical"
                                              android:padding="3dp"
                                              android:visibility="gone"
                                              android:layout_marginStart="5dp"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content">

                                              <TextView
                                                  android:id="@+id/weather_temp_max"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:text="0 C"
                                                  android:drawableLeft="@drawable/ic_arrow_upward_16"
                                                  android:textStyle="bold"
                                                  android:drawableTint="@color/ColorGreen"
                                                  android:textColor="@color/white"
                                                  android:textSize="13sp"
                                                  android:textAlignment="center"
                                                  android:layout_gravity="center"
                                                  />

                                              <TextView
                                                  android:id="@+id/weather_temp_min"
                                                  android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:text="0 C"
                                                  android:drawableLeft="@drawable/ic_arrow_downward_16"
                                                  android:textStyle="bold"
                                                  android:drawableTint="@color/red"
                                                  android:textColor="@color/white"
                                                  android:textSize="13sp"
                                                  android:textAlignment="center"
                                                  android:layout_gravity="center"
                                                  />

                                          </LinearLayout>

                                          <ImageView
                                              android:id="@+id/weather_iconView"
                                              android:layout_width="90dp"
                                              android:layout_height="60dp"
                                              android:layout_gravity="center" />
                                      </LinearLayout>



                                      <TextView
                                          android:id="@+id/weather_desc"
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text=""
                                          android:textAlignment="center"
                                          android:textColor="@color/lightGrey200"
                                          android:textSize="13sp"
                                          android:textStyle="bold" />
                                  </LinearLayout>


                              </LinearLayout>

                          </LinearLayout>






                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:orientation="vertical"
                              android:layout_alignParentRight="true"
                              android:layout_gravity="center"
                              android:layout_height="wrap_content">


                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:orientation="horizontal"
                              android:layout_alignParentRight="true"
                              android:layout_gravity="center"
                              android:layout_height="wrap_content">

                              <LinearLayout
                                  android:orientation="vertical"
                                  android:padding="6dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">

                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Humidity"
                                      android:drawableLeft="@drawable/ic_water_drop_14"
                                      android:textStyle="bold"
                                      android:textColor="@color/lightGrey"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                                  <TextView
                                      android:id="@+id/weather_humidity"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="0"
                                      android:textStyle="bold"
                                      android:textColor="@color/white"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                              </LinearLayout>


                              <LinearLayout
                                  android:orientation="vertical"
                                  android:padding="6dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">

                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Pressure"
                                      android:drawableLeft="@drawable/ic_pressure_14"
                                      android:textStyle="bold"
                                      android:textColor="@color/lightGrey"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                                  <TextView
                                      android:id="@+id/weather_pressure"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="0"
                                      android:textStyle="bold"
                                      android:textColor="@color/white"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                              </LinearLayout>

                          </LinearLayout>



                              <LinearLayout
                                  android:orientation="vertical"
                                  android:padding="6dp"
                                  android:layout_marginRight="8dp"
                                  android:layout_gravity="end"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content">

                                  <TextView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="Wind"
                                      android:drawableLeft="@drawable/ic_wind_14"
                                      android:textStyle="bold"
                                      android:textColor="@color/lightGrey"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                                  <TextView
                                      android:id="@+id/weather_wind"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:text="0"
                                      android:textStyle="bold"
                                      android:textColor="@color/white"
                                      android:textSize="13sp"
                                      android:textAlignment="center"
                                      android:layout_gravity="center"
                                      />

                              </LinearLayout>


                              <TextView
                                  android:id="@+id/weather_refresh"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textStyle="bold"
                                  android:padding="6dp"
                                  android:drawableLeft="@drawable/ic_refresh_16"
                                  android:textColor="@color/white"
                                  android:textSize="13sp"
                                  android:layout_marginRight="16dp"
                                  android:layout_gravity="end"
                                  />


                          </LinearLayout>


                      </RelativeLayout>



                  </LinearLayout>


              </androidx.cardview.widget.CardView>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textSize="14sp"
                  android:text="Categories"
                  android:padding="5dp"
                  android:layout_marginStart="12dp"
                  android:textColor="@color/primary"
                  android:drawableTint="@color/white" />

              <androidx.recyclerview.widget.RecyclerView
                  android:padding="10dp"
                  android:id="@+id/CategoryRecyclerView_e"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              <androidx.core.widget.NestedScrollView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">





                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:textSize="14sp"
                          android:text="All Ads"
                          android:padding="5dp"
                          android:layout_marginStart="12dp"
                          android:textColor="@color/primary"
                          android:drawableTint="@color/white" />
                      <androidx.recyclerview.widget.RecyclerView
                          android:padding="10dp"
                          android:id="@+id/AdsRecyclerView_e"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:padding="5dp"
                          android:textSize="14sp"
                          android:text="All Farms"
                          android:layout_marginStart="12dp"
                          android:textColor="@color/primary"
                          android:drawableTint="@color/white" />



                      <androidx.recyclerview.widget.RecyclerView
                          android:id="@+id/FetchFarmImagesRecyclerView_e"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                  </LinearLayout>
              </androidx.core.widget.NestedScrollView>


          </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/MySearch_algolia_e"
                android:layout_below="@id/LL_search"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SearchRecyclerView_v_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/SearchListLayout_explore"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:layout_below="@id/LL_search"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">



                        <androidx.recyclerview.widget.RecyclerView
                            android:padding="5dp"
                            android:id="@+id/SearchRecyclerView_explore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>




                </LinearLayout>



            </FrameLayout>

        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>
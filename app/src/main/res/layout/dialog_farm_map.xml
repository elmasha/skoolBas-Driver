<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:background="@drawable/btn_white"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/CloseFarmView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/lightGrey"
            android:layout_centerHorizontal="true"
            android:drawableBottom="@drawable/arrow_down_34"
            android:padding="0dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="200dp"
            android:background="@drawable/btn_white"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/farm_map_image_v"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/farm_map_rate_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0.0 "
                android:background="@drawable/bg_rating_white"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/star_half_34"
                android:textSize="14sp"
                android:textStyle="bold"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="4dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farm_map_name_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm name "
                        android:maxLines="1"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/farm_map_category_v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farm name "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                </LinearLayout>



            </RelativeLayout>



            <TextView
                android:id="@+id/ViewFarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" View Farm "
                android:drawableTint="@color/white"
                android:padding="8dp"
                android:background="@drawable/btn_sec"
                android:layout_margin="8dp"

                android:drawableRight="@drawable/double_arrow_44"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="false"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/btn_white"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="140dp"
            android:background="@drawable/btn_white"
            android:layout_height="90dp"
            android:elevation="0dp"
            app:cardCornerRadius="13dp">

            <ImageView
                android:id="@+id/farm_row_image_v"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/farm_row_rate_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0.0 "
                android:background="@drawable/bg_rating_white"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/main"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/star_half_34"
                android:textSize="13sp"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <TextView
                android:id="@+id/viewMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:padding="3dp"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/farm_row_name_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farm name "
                            android:maxLines="1"
                            android:minLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/farm_row_category_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farm name "
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/farm_row_county_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:padding="4dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />


                        <TextView
                            android:id="@+id/farm_row_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:paddingTop="4dp"
                            android:background="@drawable/bg_main_white"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/arrow_forward_24"
                            android:drawableTint="@color/white"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            />

                    </RelativeLayout>

                </LinearLayout>



            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    app:cardCornerRadius="16dp"
    android:background="@drawable/btn_white"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:elevation="0dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/farm_row_image_e"
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    />



            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/farm_row_name_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farm name "
                            android:maxLines="1"
                            android:minLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/farm_row_category_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farm name "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            />


                        <TextView
                            android:id="@+id/farm_row_rate_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0.0 "
                            android:gravity="center"
                            android:padding="1dp"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/star_half_34"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/farm_row_county_e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />


                    <TextView
                        android:id="@+id/farm_row_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:paddingRight="12dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:background="@drawable/bg_main_white"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/arrow_forward_24"
                        android:drawableTint="@color/white"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>




</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:padding="0dp"
    android:background="@drawable/bg_white_category"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/LayoutRowInbox"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_inbox_sec_category"
                android:layout_width="5dp"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_height="30dp">

            </RelativeLayout>


            <RelativeLayout
                android:background="@drawable/bg_blue_inbox"
                android:layout_width="48dp"
                android:layout_margin="5dp"
                android:layout_height="48dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/inbox_name_II"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        />
                </LinearLayout>



            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inbox_user_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    android:text="K"
                    android:textColor="@color/main"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/inbox_message_row"
                    android:layout_width="150dp"
                    android:maxLines="1"
                    android:minLines="1"
                    android:padding="3dp"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    />




            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inbox_date_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>